<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#dddddd"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/spiritsButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tab_over"
                android:text="Spirits"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mixersButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/tab_bg"
                android:text="Mixers"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/mixersButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/tab_bg"
                android:text="Cocktails"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
			         <!-- Navigation left panel -->
			         <LinearLayout
			            android:layout_width="180dp"
			            android:layout_height="wrap_content"
			            android:orientation="vertical" android:id="@+id/categoryLayout">
			        </LinearLayout>
			        
			         <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:orientation="vertical" android:id="@+id/spiritsLayout">
			        </LinearLayout>
	         
			</LinearLayout>
		</ScrollView>
    </LinearLayout>