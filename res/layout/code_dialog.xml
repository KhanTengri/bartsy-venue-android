<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3" >

        <Button
            android:id="@+id/view_code_dialog_button_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="1"/>

        <Button
            android:id="@+id/view_code_dialog_button_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="2" />

        <Button
            android:id="@+id/view_code_dialog_button_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="3" />

        <Button
            android:id="@+id/view_code_dialog_button_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="4" />

        <Button
            android:id="@+id/view_code_dialog_button_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="5" />

        <Button
            android:id="@+id/view_code_dialog_button_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="6" />

        <Button
            android:id="@+id/view_code_dialog_button_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="7" />

        <Button
            android:id="@+id/view_code_dialog_button_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="8" />

        <Button
            android:id="@+id/view_code_dialog_button_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="42sp" 
            android:layout_gravity="left"
            android:text="9" />

    </GridLayout>

</LinearLayout>
